<% if(typeof messages === "undefined") { var messages = [] } %>

<% for(var i in messages) { %>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title"><%= messages[i].author.username %></h3>
    </div>
    <div class="panel-body">
        <%= messages[i].content %>
    </div>
    <div class="panel-footer">
        <%= (messages[i].location || '') + ' at ' + messages[i].published.toLocaleTimeString() + ' on ' +  messages[i].published.toLocaleDateString() %>
    </div>
</div>
<% } %>
